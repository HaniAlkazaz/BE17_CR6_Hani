{% extends 'base.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
      
   {# <h1 class= "text-md-center h1";">Event</h1> #}
     <h4 class="card-title text-md-center h1">Event {{ event.name }}</h4>


                  <div class="container ">

                    <div class="card" style="width:400px height:200px">
                        <div class="card-body">
                        <img src="/uploads/{{ event.image }}" alt={{ event.name }}"Card image" style="width:100% height:100%">
                        
                        <h4 class="card-title">{{ event.name }}</h4>
                        <p class="card-text">{{ event.description }}</p>
                        <p class="card-text"> location: {{ event.address }}</p>
                        <p class="card-text">The Time: {{ event.date ? event.date|date('Y-m-d H:i:s') : '' }}</p> 
                        <p class="card-text">Event: {{ event.type }}</p>
                        <p class="card-text"> Contact us:{{ event.contact }}</p>
                        
                        <a href="{{ path('app_event_edit', {'id': event.id}) }}"class="btn btn-outline-success mb-2">Update</a>
                        <a href="{{ path('app_event_index') }}"class="btn btn-success mt-2">back to list</a>

                         {{ include('event/_delete_form.html.twig') }}
                        </div>
                    </div>
   

    

   
</div>
{% endblock %}
