        <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-2 row-cols-xs-1 mb-3">
            {% for event in events %}
        <div>
                            
                    <div class="card" style="width:400px height:200px">
                        <div class="card-body">
                        <img src="/uploads/{{ event.image }}" alt={{ event.name }}"Card image" style="width:100%">
                        
                        <h4 class="card-body text-center ">{{ event.name }}</h4>
                        {# <p class="card-text">{{ event.description }}</p> #}
                        <p class="card-text center-center">The Time: {{ event.date ? event.date|date('Y-m-d H:i:s') : '' }}</p>
                        <p class="card-text">location: {{ event.address }}</p>
                        <a href="{{ path('app_event_show', {'id': event.id}) }}"class="btn btn-primary">Details</a>
                        <a href="{{ path('app_event_edit', {'id': event.id}) }}"class="btn btn-outline-success">Update</a>
                        
                        </div>
                    </div>
                        
        </div>
    

        {% else %}
                <p>no records found</p>
        {% endfor %}
        
    {# <a href="{{ path('app_event_new') }}">Create new</a> #}
        </div>
    </div>
